<link rel="stylesheet" href="/css/dudas/preguntasLista.css">

<div id="fondo">
    <img src="/img/fondos/sistemaNervioso.png">
</div>

<form action="/dudas/preguntas/lista/{{user.idUsuario}}" method="GET"></form>

<div id="contenedor">
    <div class="row">
        {{#each enlistar}}
        <div id="tarjeta">
            <div id="titulo">
                <p>
                    <b>Pregunta {{idPreguntas}}</b>
                </p>
            </div>

            <div id="Pregunta">
                <p>{{pregunta}}</p>
            </div>

            <div id="botonEditar">
                <a href="/dudas/preguntas/editar/{{idPreguntas}}">
                    <button>Editar</button>
                </a>
            </div>

            <div id="botonDetalle">
                <a href="/dudas/respuestas/lista/{{idPreguntas}}">
                    <button>Detalles</button>
                </a>
            </div>

            <div id="botonEliminar">
                <a href="/dudas/preguntas/eliminar/{{idPreguntas}}">
                    <button>Eliminar</button>
                </a>
            </div>
        </div>

        {{else}}
        <div id="mensaje">
            <p>
                <b>Usted no tiene registrado ninguna pregunta.</b>
            </p>

            <button type="button">
                <a href="/dudas/preguntas/agregar/{{user.idUsuario}}">
                    Â¿Desea registrar?
                </a>
            </button>
        </div>
        {{/each}}
    </div>
</div>

<div id="plus">
    <a href="/dudas/preguntas/agregar/{{user.idUsuario}}">
        <button type="button"><img src="/img/usuarios/plus.png"></button>
    </a>
</div>
