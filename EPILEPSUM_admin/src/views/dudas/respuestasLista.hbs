<link rel="stylesheet" href="/css/dudas/respuestaslista.css" />

<div id="fondo">
    <img src="/img/fondos/sistemaNervioso.png" />
</div>

<form action="/dudas/respuestas/lista/{{user.idUsuario}}" method="GET"></form>

<div id="contenedor">
    <div class="row">
        {{#each enlistar}}
        <div id="tarjeta">
            <div id="titulo">
                <p>
                    <b>Pregunta {{idPreguntas}}: {{pregunta}}</b>
                </p>
            </div>

            <div id="Respuesta">
                <p>
                    {{respuesta}}
                </p>
            </div>

            <div id="botonEditar">

                <a href="/dudas/respuestas/editar/{{idRespuesta}}">
                    <button>Editar</button>
                </a>

            </div>

            <div id="botonEliminar">

                <a href="/dudas/respuestas/eliminar/{{idRespuesta}}">
                    <button>Eliminar</button>
                </a>

            </div>
        </div>

        {{else}}
        <div id="mensaje">
            <p><b>Usted no tiene registrado ninguna respuesta. </b></p>
            <a href="/dudas/respuestas/agregar/{{user.idUsuario}}">
                <button type="button">Â¿Desea registrar?</button>
            </a>
        </div>
        {{/each}}
    </div>
</div>

<div id="plus">
    <a href="/dudas/respuestas/agregar/{{user.idUsuario}}">
        <button type="button"><img src="/img/usuarios/plus.png" /></button>
    </a>
</div>