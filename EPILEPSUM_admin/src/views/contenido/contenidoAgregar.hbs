<div id="contenedor">
    <form action="/contenido/agregar/{{user.idUsuario}}" method="POST">
        <div id="titulo">{{#each idMax}}
            <label>
                Agregar Contenido N:
                <input type="text" name="contenido" id="numero" value="{{'MAX(idContenido)'}}">
            </label>{{/each}}
        </div>

        <div>
            <label>
                Nombre:
            </label>
            <input type="text" name="nombreContenido" id="nombre" required>
        </div>

        <div>
            <label>
                Descripci√≥n:
            </label>
            <input type="text" name="descripcionDetalleContenido" id="descripcion" required>
        </div>


        <div>
            <label>
                Foto:
            </label>
            <input type="image" name="imagenDetalleContenido" id="foto">
        </div>

        <div>
            <label>
                Video:
            </label>
            <input type="video" name="videoDetalleContenido" id="video">
        </div>

        <div>
            <button type="submit" id="btn-agregar">
                Agregar
            </button>
        </div>
    </form>
</div>

<script src="/js/numero.js"></script>