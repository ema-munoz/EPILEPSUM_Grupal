<!-- Required meta tags -->
<link rel="stylesheet" href="/css/ContactosEmergencia/contactosLista.css">

<div id="fondo">
    <img src="/img/fondos/sistemaNervioso.png">
</div>

<form action="/contactos/lista/{{user.idusuario}}" method="GET"></form>


<div id="contenedor">
    <div class="row">
        {{#each enlistar}}
        <div id="tarjeta">
            <div id="titulo">
                <p>
                    <b>Contacto:</b>
                </p>
            </div>

            <div id="Nombres">
                <p>
                    Nombre: {{nombre}}
                </p>
            </div>

            <div id="Familiar">
                <p>
                    Parentesco: {{nombreFamiliar}}
                </p>
            </div>

            <div id="Telefono">
                <p>
                    Teléfono: 0{{telefono}}
                </p>
            </div>

            <div id="Celular">
                <p>
                    Celular: 0{{celular}}
                </p>
            </div>

            <div id="botonEditar">
                <a href="/contactos/editar/{{idcontactosEmergencia}}">
                    <button type="button">Editar</button>
                </a>
            </div>

            <div id="botonEliminar">
                <a href="/contactos/eliminar/{{idcontactosEmergencia}}">
                    <button type="submit">Eliminar</button>
                </a>
            </div>
        </div>

        {{else}}
        <div id="mensaje">
            <p><b>Usted no tiene registrado ningún contacto de Emergencia.</b></p>
            <a href="/contactos/agregar/{{user.idusuario}}">
                <button type="button">¿Desea registrar?</button>
            </a>
        </div>
        {{/each}}
    </div>
</div>

<div id="plus">
    <a href="/contactos/agregar/{{user.idusuario}}">
        <button type="button"><img src="/img/usuarios/plus.png"></button>
    </a>
</div>
